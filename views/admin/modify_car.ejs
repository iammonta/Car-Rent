<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>

</head>


<body>
    <%- include ('../partials/admin_navbar') %>


    <div class="container px-4 ">
        <%- include ('../partials/flash') %>
    </div>



    <div class="container justify-content-center align-items-center mt-5 ">
        <div class="row">
            <div class="col-md-4 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Modify car</h5>
                        <form class="px-4 py-4" action="/admin/agencies/<%= id %>/<%= car_id %>/modify_car"
                            method="POST">
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Model</label>
                                <input type="text-area" name="model" value="<%=car.Model%>" class="form-control"
                                    id="exampleDropdownFormPassword1" required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>

                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Price Per Day</label>
                                <input type="Number" name="price" value="<%=car.Price%>" class="form-control"
                                    id="exampleDropdownFormPassword1" required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>

                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Description</label>

                                <textarea cols="5" rows="5" name="description" class="form-control"
                                    id="exampleDropdownFormPassword1"><%=car.Description%></textarea>

                                <div class="valid-feedback">Looks Good!</div>
                            </div>




                            <br>
                            <a class="btn btn-success btn-block" href="/admin/agencies/<%= id %>/<%= car_id %>">
                                Back</a>

                            <button type="submit" class="btn btn-success btn-block">Edit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <%- include ('../partials/footer') %>

</body>


</html>