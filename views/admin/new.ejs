<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>

</head>


<body>
    <%- include ('../partials/admin_navbar') %>


    <div class="container px-4 ">
        <%- include ('../partials/flash') %>
    </div>



    <div class="container justify-content-center align-items-center mt-5 ">
        <div class="row">
            <div class="col-md-4 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Add a new agency</h5>
                        <form class="px-4 py-4" action="/admin/add" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleDropdownFormUsername">Agency Name</label>
                                <input type="text" name="name" class="form-control" autofocus maxlength="25"
                                    minlength="3" id="exampleDropdownFormEmail1" required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormEmail1">Adress</label>
                                <input type="text" name="adress" class="form-control" id="exampleDropdownFormEmail1"
                                    required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Phone Number</label>
                                <input type="number" name="phone" class="form-control" maxlength="8"
                                    id="exampleDropdownFormPassword1" required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Owner Email</label>
                                <input type="email" name="email" class="form-control" id="exampleDropdownFormPassword1"
                                    required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Description</label>

                                <textarea name="description" class="form-control" id="exampleDropdownFormPassword1"
                                    placeholder="Please describe the agency" rows="3" cols="50"
                                    id="exampleDropdownFormPassword1" required>
</textarea>

                                <div class="valid-feedback">Looks Good!</div>
                            </div>

                            <!-- <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Image</label>
                                <input type="file" name="agency_image" class="form-control"
                                    id="exampleDropdownFormPassword1" required>
                                <div class="valid-feedback">Looks Good!</div>
                            </div> -->



                            <br>
                            <br>
                            <button type="submit" class="btn btn-success btn-block">Proceed</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <%- include ('../partials/footer') %>

</body>


</html>