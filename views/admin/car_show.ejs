<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>


<body>
    <!-- Responsive navbar-->
    <%- include('../partials/admin_navbar') %>


    <center>

        <div class="col-lg-6 col-xxl-4 mb-5">
            <div class="card bg-light border-0 h-100">
                <div class="card-body text-center p-4 p-lg-6 pt-0 pt-lg-0">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4"><i
                            class="bi bi-collection"></i></div>
                    <h2 class="fs-4 fw-bold"></h2>




                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">

                            <%  car.Images.forEach((img, i)=> {  %>

                            <div class="carousel-item  <%= i === 0 ? 'active' : '' %>  ">
                                <img class="d-block w-100" src="<%= img.url %>" alt="">
                            </div>
                            <% }) %>

                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>












                    <h2>
                        Model: <%= car.Model %><br>
                        Price: <%= car.Price %> DT / Day<br>
                        <%= car.Description %><br>

                    </h2>
                    <a class="btn btn-primary btn-lg" href="/admin/agencies/<%=id %>"> Back</a>
                    <a class="btn btn-primary btn-lg" href="/admin/agencies/<%=id%>/<%=car.id%>/modify_car">Modify</a>

                    <form action="/admin/agencies/<%=id%>/<%=car.id%>/delete_car" method="POST"><br>
                        <button class="btn btn-primary btn-lg">Delete</button>
                    </form>
                </div>

            </div>

        </div>


        <!-- Footer-->
        <%- include('../partials/footer') %>
        <!-- Bootstrap core JS-->


    </center>

</body>





</html>